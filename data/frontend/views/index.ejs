<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="/styles/style.css" />
  </head>

  <body>
    <div class="container-fluid min-vh-100">
      <%- include("./partials/navbar.ejs", {heading: "Battery Health Monitor"})
      %>

      <div class="row px-5">
        <div class="col col-md-6 col-lg-6 col-12">
          <div class="gauge-container d-flex justify-content-center"></div>
          <div class="d-flex justify-content-center">
            <div
              class="current-time text-center fw-bold border border-dark border-3 px-2 py-1 rounded"
            ></div>
          </div>
          <div class="d-flex justify-content-center p-3">
            <img src="/images/battery.jpg" alt="Battery images" />
          </div>
        </div>
        <div
          class="col col-md-6 col-lg-6 col-12"
          style="height: calc(100vh - 100px)"
        >
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Sr. No</th>
                <th>Time (IST)</th>
                <th>Date (MM/DD/YY)</th>
                <th>Battery Voltage (V)</th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>

          <a class="btn btn-success download-btn" onclick="downloadCSV()"
            >Download CSV</a
          >
          <div class="btn btn-danger" onclick="reset()">Reset</div>
        </div>
        <!-- <div class="col col-lg-4 col-12">
          <div id="adc_chart" class="line-chart">
            <canvas id="adc-canvas"></canvas>
          </div>
          <div id="current_voltage_chart" class="line-chart">
            <canvas id="currentvoltage-canvas"></canvas>
          </div>
        </div> -->
      </div>
    </div>
    <script
      type="text/javascript"
      src="https://www.gstatic.com/charts/loader.js"
    ></script>
    <script src="/scripts/d3-gauge.js"></script>
    <script src="/scripts/index.js"></script>

    <script></script>
  </body>
</html>
