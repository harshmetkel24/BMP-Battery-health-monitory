  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Battery Monitor</title>
    <!-- Add Bootstrap 5 CSS link -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <style>
      .grid-container {
        height: 400px;
        max-height: 100vh;
      }

      .webpage-container {
        width: 100%;
        height: 100%;
        border: 1px solid #ccc;
        overflow: hidden;
        position: relative;
      }

      .webpage-container iframe, .webpage-container p {
        width: 100%;
        height: 100%;
        border: none;
      }

      .full-screen {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1000;
      }

      .toggle-button {
        position: absolute;
        bottom: 10px;
        right: 10px;
        z-index: 999;
      }
    </style>
  </head>
  <body>
    <div class="container mt-4 min-vh-100">
      <%- include('./partials/navbar', { heading : "Battery Health Monitor | All Batteies"}) %>
      <div class="container">
        <div class="row grid-container">
          <% for (let i = 1; i <= 36; i++) { %>
          <div class="col-lg-3 col-md-4 col-sm-6 col-12 mb-4 px-4 py-2">
            <div
              class="webpage-container border border-3 border-dark rounded-3 shadow"
            >
              <% if (batteries[`battery${i}`]) { %>
              <iframe src="<%= batteries[`battery${i}`] %>"></iframe>
              <div
                class="toggle-button btn btn-primary"
                onclick="toggleFullScreen(this.parentElement)"
              >
                Toggle Fullscreen
              </div>
              <% } else { %>
              <p class="alert alert-danger text-center">No battery provided</p>
              <% } %>
            </div>
          </div>
          <% } %>
        </div>
      </div>

